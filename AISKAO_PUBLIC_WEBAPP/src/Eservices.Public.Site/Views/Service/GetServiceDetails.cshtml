                }
            }
        </ul>
    </li>

    <li><span class="listTitle">@Service.RefusalAppealProcedureDescription</span></li>
    @Html.DisplayFor(model => model.PublicInformationRefusalAppealProcedureDescription)

    <li><span class="listTitle">@Service.ResultDesription</span></li>
    @Html.DisplayFor(model => model.PublicInformationResultDesription)

</ol>

