                }

            }
        </ul>
    </li>


    <li><span class="listTitle">@Service.PaymentAndTermDescription</span>
        <ul class="crl">
            @if (Model.PaymentInformation.Count() != 0)
            {
                foreach (var bullet in Model.PaymentInformation)
                {
                <li>@bullet.Description</li>
                }

            }
        </ul>
         <p>@Html.DisplayFor(model => model.PublicInformationPaymentAndTermDescription)</p>
    </li>
    <li><span class="listTitle">@Service.RequestMethod</span>
        <ul>
            @if (Model.RequestMethod.Count() != 0)
            {
                foreach (var bullet in Model.RequestMethod)
                {
                <li>@bullet.Description</li>
                }
            }
        </ul>
    </li>

    <li><span class="listTitle">@Service.ServiceResponsible</span></li>
    @Html.DisplayFor(model => model.PublicInformationServiceResponsible)


    <li><span class="listTitle">@Service.InternalStep</span>
        <ul class="crl">
