@model TechnoLogica.Eservices.Public.Site.Models.Service.GetServiceDetailsViewModel
@using System.Web.Razor.Parser.SyntaxTree
@using StructureMap.Query

@using TechnoLogica.Eservices.Public.Site.Resources
@{
    ViewBag.Title = Service.GetServiceDetailsTitle;
    ViewBag.Subtitle = Model.Name;
}

<ol class="romanStyle">
    <li><span class="listTitle">@Service.ServiceName</span></li>
    @Html.DisplayFor(model => model.Name)

    <li><span class="listTitle">@Service.LegalBasis</span></li>

    <ul class="crl">
        @if (Model.LegalBasis.Count() != 0)
        {
            foreach (var bullet in Model.LegalBasis)
            {
            <li>@bullet.Description</li>
            }

        }
    </ul>

    <li><span class="listTitle">@Service.ServiceDescription</span></li>
    @Html.DisplayFor(model => model.PublicInformationDescription)

    <li><span class="listTitle">@Service.Procedure</span></li>
</ol>
<ol>
    <li><span class="listTitle">@Service.CompetentAuthority</span></li>
    @Html.DisplayFor(model => model.PublicInformationCompetentAuthority)

    <li><span class="listTitle">@Service.Applicant</span></li>
    @Html.DisplayFor(model => model.PublicInformationApplicant)

    <li><span class="listTitle">@Service.RequiredDocument</span>
        <ul class="crl">
            @if (Model.RequiredDocument.Count() != 0)
            {
                foreach (var bullet in Model.RequiredDocument)
                {
